git_url(ENV["MATCH_GIT_URL"])
storage_mode("git")
type("appstore")
# Use the secret bundle id, not a hardcoded one
app_identifier([ENV["APP_IDENTIFIER"]])
username(ENV["APPLE_ID"])
team_id(ENV["APPLE_TEAM_ID"])

# Git branch to use (default is 'master')
git_branch("main")

# CI-safe defaults
readonly(true)
skip_confirmation(true)

# Keychain to use for certificates in CI
keychain_name("ci_keychain")
keychain_password(ENV.fetch("MATCH_PASSWORD", ""))
